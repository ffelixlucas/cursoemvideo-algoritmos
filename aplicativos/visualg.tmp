algoritmo "time"
var
   times: vetor [1..3] de Caracter
   i, j: Inteiro
inicio
   EscrevaL("------------------")
   EscrevaL("CAMPEONATO FUTEBOL")
   EscrevaL("------------------")
   Para i <- 1 ate 3 faca
     Escreva ("nome do", i , "o. time: ")
     Leia(times[i])
   FimPara
   
   LimpaTela
   EscrevaL("-------------------")
   EscrevaL(" TABELA DE PARTIDAS")
   EscrevaL("-------------------")
   para i <- 1 ate 3 faca
      para j <- 1 ate 3 faca
      se (i<>j) entao
      escreval (times[i]:10," x ",10:times[j])
      fimse
      fimpara
   FimPara

fimalgoritmo
